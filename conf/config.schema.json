{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "isEnabled": {
      "type": "boolean",
      "description": "Should SMTP be used?",
      "default": false,
      "_adapt": {
        "isPublic": true
      }
    },
    "connectionUrl": {
      "type": "string",
      "description": "URL for smtp service.",
      "default": ""
    },
    "defaultSenderAddress": {
      "type": "string",
      "description": "Default email address to use as the sender."
    }
  }
}
